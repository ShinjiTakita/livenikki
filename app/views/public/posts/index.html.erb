<div class="container">
  <div class="row pb-3">
    <h3 style="background-color: silver;">投稿一覧</h3>
  </div>

      <div class="row">
        <div class="col-8">
          <div class="d-flex">
            <% @posts.each do |post| %>
              <div class="me-4">
                <div class="row pr-3">
                  <div class="col-2"></div>
                  <div class="col-5"><%= link_to (image_tag post.get_image[0], :size => '300x300'), post_path(post.id) %></div>
                </div>
                <div class="row">
                  <div class="col-2"></div>
                  <div class="col-5"><%= post.title %></div>
                </div>
                <div class="row">
                  <div class="col-2"></div>
                  <div class="col-5"><%= post.customer.last_name + post.customer.first_name %></div>
                </div>
                <div class="row">
                  <div class="col-2"></div>
                  <div class="col-5"><%= post.created_at.strftime('%Y/%m/%d') %></div>
                </div>
                <div class="row">
                  <div class="col-2"></div>
                  <div class="col-5"><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></div>
                </div>
                <div class="row">
                  <div class="col-2"></div>
                  <div class="col-5"><%= link_to "#{post.favorites.count} いいね", post_path(post.id) %></div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="row pt-3">
                  <div class="col-6"></div>
                  <div class="col-3"><%= paginate @posts %></div>
            </div>
        </div>
      </div>
 </div>

